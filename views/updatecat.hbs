<div class="container form-group rounded" style="padding: 10% 0% 10% 0%">
    <div class="bg-dark col-6 text-light p-4">
    <h2 class="text-center">Update Cat</h2>
    <form id="updateCat" action="/viewcat" method="post">
        <label for="catName">Name:</label>
        <input type="text" class="form-control" id="catName" name="catName" value={{cat.catName}}>
        <label for="catBreed" class="mt-3">Breed:</label>
        <input type="text" class="form-control" id="catBreed" name="catBreed" value={{cat.catBreed}}>
        <label for="catColor" class="mt-3">Color:</label>
        <input type="text" class="form-control" id="catColor" name="catColor" value={{cat.catColor}}>
        <label for="catHair">Hair:</label>
        <input type="text" class="form-control" id="catHair" name="catHair" value={{cat.catHair}}>
        <label for="catAge">Age:</label>
        <input type="number" class="form-control" id="catAge" name="catAge" value={{cat.catAge}}>
        <label for="catWeight">Weight:</label>
        <input type="number" class="form-control" id="catWeight" name="catWeight" value={{cat.catWeight}}>

        <label for="room-selector" class="mt-3">Room:</label>
        <select class="form-control" name="room" id="room-selector">
            <option value=NULL>Select Room</option>
            {{#each rooms}}
                <option value={{this.id}}>{{name}}</option>
            {{/each}}
        </select><br>
        <br>
    </form>
    <button class="btn btn-primary" onclick="updateCat({{cat.catID}})">Update Cat</button>
    </div>
    <script defer>selectroom({{cat.room}});</script>
</div>